{
  "name": "ai-pm-mindmap",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "version": "1.0.0",
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "packages/shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter shared build && pnpm --filter backend build && pnpm --filter frontend build",
    "preview": "pnpm --filter frontend preview",
    "lint": "pnpm lint:root",
    "lint:root": "eslint --ext .ts,.tsx,.js,.jsx,.cjs,.mjs .",
    "format": "prettier --write .",
    "test": "pnpm -r test",
    "test:unit": "pnpm --filter shared test && pnpm --filter backend test -- --runInBand",
    "test:integration": "pnpm --filter backend test:integration",
    "e2e": "pnpm --filter frontend e2e",
    "generate:openapi": "pnpm --filter backend generate:openapi",
    "seed": "pnpm --filter backend seed"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.33.2",
    "prettier": "3.2.5",
    "tsx": "4.7.3",
    "typescript": "5.4.2"
  }
}
