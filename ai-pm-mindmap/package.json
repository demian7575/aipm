{
  "name": "ai-pm-mindmap",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/backend",
    "apps/frontend",
    "packages/shared"
  ],
  "scripts": {
    "build": "npm run build -w packages/shared && npm run build -w apps/backend && npm run build -w apps/frontend",
    "dev": "npm-run-all -p dev:backend dev:frontend",
    "dev:backend": "npm run dev -w apps/backend",
    "dev:frontend": "npm run dev -w apps/frontend",
    "lint": "npm-run-all lint:shared lint:backend lint:frontend",
    "lint:shared": "npm run lint -w packages/shared",
    "lint:backend": "npm run lint -w apps/backend",
    "lint:frontend": "npm run lint -w apps/frontend",
    "test": "npm-run-all test:shared test:backend test:frontend",
    "test:shared": "npm run test -w packages/shared",
    "test:backend": "npm run test -w apps/backend",
    "test:frontend": "npm run test -w apps/frontend",
    "generate:openapi": "npm run generate:openapi -w apps/backend",
    "seed": "npm run seed -w apps/backend",
    "e2e": "npm run e2e -w apps/frontend",
    "bundle:check": "node scripts/check-bundle-size.js"
  },
  "devDependencies": {
    "@types/node": "20.12.7",
    "concurrently": "8.2.2",
    "npm-run-all": "4.1.5"
  }
}
